<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="ContactMessage" table="contact_messages" repository-class="ContactMessageRepository">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        
        <field name="username" type="string" />

        <field name="email" type="string" nullable="true" />
        
        <field name="body" type="text" length="65535" />
        
        <field name="ip" type="bigint" nullable="true">
            <options>
                <option name="comment">long2ip to decode; using bigint instead of string for faster search</option>
            </options>
        </field>

        <field name="createdAt" column="created_at" type="datetime" nullable="true" />

    </entity>
    
</doctrine-mapping>